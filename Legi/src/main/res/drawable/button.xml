<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape>
			<solid
					android:color="@color/red"/>
			<stroke
					android:width="0dp"
					android:color="@color/red" />
			<padding
					android:left="35dp"
					android:top="15dp"
					android:right="35dp"
					android:bottom="15dp" />
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="@color/green"/>
			<stroke
					android:width="0dp"
					android:color="@color/green" />
			<padding
					android:left="35dp"
					android:top="15dp"
					android:right="35dp"
					android:bottom="15dp" />
		</shape>
	</item>
</selector>