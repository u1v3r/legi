<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:legi="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="50dp"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:gravity="fill">

	<sk.rdy.legi.widget.TypeFacedTextView
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			legi:typeface="@string/oswald_light"
			android:textColor="@color/navigation_drawer_text"
			android:textSize="18dp"
			android:id="@+id/navigation_drawer_child_subscription_name"
			android:gravity="center_vertical|left"
			android:text="Abclinuxu.cz"/>

	<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			>

		<sk.rdy.legi.widget.TypeFacedTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				legi:typeface="@string/oswald_light"
				android:id="@+id/navigation_drawer_child_unread_count"
				android:gravity="center_vertical|right"
				android:text="123"
				android:layout_gravity="center|right"
				style="@style/nav_drawer_children_unread_textview"
				android:layout_marginRight="@dimen/drawer_list_unread_margin_right"/>
	</FrameLayout>

</LinearLayout>